<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:weightSum="11"
    tools:context="com.example.panda94.socketio.Main">

    <ListView
        android:id="@+id/list_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:listSelector="@android:color/transparent"
        android:transcriptMode="alwaysScroll"
        android:divider="@null"
        android:layout_weight="10"
        >

    </ListView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:background="@drawable/primary_box_border"
        android:padding="1dp"
        android:layout_weight="1">

        <EditText
            android:id="@+id/ed_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/ed_chat_hint"
            android:lines="2"
            android:background="#00000000"
            android:layout_weight="4"/>

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/btn_chat_text"
            android:background="@drawable/left_btn_border"
            android:textSize="12sp"
            android:textColor="#008B8B"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_margin="2dp"
            />
    </LinearLayout>




</LinearLayout>
